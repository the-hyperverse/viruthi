{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main Process",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": [
        "."
      ],
      "port": 9222,
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "name": "Electron: Renderer Process",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "port": 9223,
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": [
        "${workspaceFolder}/dist/main.js",
        "--remote-debugging-port=9223"
      ],
      "webRoot": "${workspaceFolder}/src",
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Electron: Main and Renderer",
      "configurations": [
        "Electron: Main Process",
        "Electron: Renderer Process"
      ]
    }
  ],
  "tasks": {
    "build": {
      "command": "npm run build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    }
  }
}
